<?php 

for(
    //init statement
    $counter=1; 
    //kondisi
    $counter <= 10; 
    //post statement
    $counter++) {
    echo "Ini adalah for loop ke-$counter" . PHP_EOL;
}

echo "\n";
echo "\n";

for ($amount = 2; $amount >= 10; $amount++):
    echo "Ini adlah for loop ke-$amount" . PHP_EOL;
endfor;

?>